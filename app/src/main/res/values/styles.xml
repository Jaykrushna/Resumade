<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="editTextStyle">@style/TextInputEditTextWithWhiteCursor</item>
    </style>

    <style name="HintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/edit_text_color_state_list</item>
    </style>

    <style name="TextInputEditTextWithWhiteCursor" parent="android:Widget.EditText">
        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>
